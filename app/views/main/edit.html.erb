<div class="texts">
	<h1>수정하기</h1>
	<form action="/create" method="post">
	  <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
		<input type="hidden" name="id" value="<%= @post.id %>">
	  <input type="text" id="fname" name="title" placeholder="제목" value="<%= @post.title %>" class="text"><br>
		<textarea type="text" id="lname" name="content" placeholder="내용" rows="4" value="<%= @post.content %>"></textarea><br>
	  <input type="submit" value="글쓰기">
	</form> 
</div>

<script>
	var dark = 0;
	var dkbutton = document.getElementById('dark');
	var body = document.querySelector('body');
	if (dark == 0) {
		body.style.backgroundColor = "black";
		body.style.color = "white";
		dark = 1;
		dkbutton.innerHTML = "라이트모드";
		document.querySelector('li').style.color = "black";
	} else {
		body.style.backgroundColor = "white";
		body.style.color = "black";
		dark = 0;
		dkbutton.innerHTML = "다크모드";
		document.querySelector('li').style.color = "black";
	}
	function dk() {
		if (dark == 0) {
			body.style.backgroundColor = "black";
			body.style.color = "white";
			dark = 1;
			dkbutton.innerHTML = "라이트모드";
			document.querySelector('li').style.color = "black";
		} else {
			body.style.backgroundColor = "white";
			body.style.color = "black";
			dark = 0;
			dkbutton.innerHTML = "다크모드";
			document.querySelector('li').style.color = "black";
		}
	}
</script>